<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Smart Bee House Management System</display-name>
    <description>Système de gestion apiculture intelligent</description>
    
    <!-- Configuration de l'encodage -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.smartbeehouse.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Configuration CORS -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.smartbeehouse.filter.CorsFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Configuration de sécurité -->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.smartbeehouse.filter.SecurityFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- Servlets -->
    <servlet>
        <servlet-name>BeehiveServlet</servlet-name>
        <servlet-class>com.smartbeehouse.servlet.BeehiveServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BeehiveServlet</servlet-name>
        <url-pattern>/api/beehives/*</url-pattern>
    </servlet-mapping>
    
    <!-- Configuration du service web -->
    <servlet>
        <servlet-name>HoneyQuantityWebService</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HoneyQuantityWebService</servlet-name>
        <url-pattern>/ws/honey/*</url-pattern>
    </servlet-mapping>
    
    <!-- Configuration OAuth -->
    <servlet>
        <servlet-name>OAuthServlet</servlet-name>
        <servlet-class>com.smartbeehouse.servlet.OAuthServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>OAuthServlet</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>
    
    <!-- Page d'accueil -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Configuration des erreurs -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <!-- Configuration de session -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>
    
    <!-- Configuration de sécurité -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <!-- Configuration des paramètres de contexte -->
    <context-param>
        <param-name>database.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/smart_bee_house</param-value>
    </context-param>
    
    <context-param>
        <param-name>database.username</param-name>
        <param-value>root</param-value>
    </context-param>
    
    <context-param>
        <param-name>database.password</param-name>
        <param-value>password</param-value>
    </context-param>
    
    <!-- Configuration de l'internationalisation -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>messages</param-value>
    </context-param>
    
    <!-- Configuration SSL -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Area</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>